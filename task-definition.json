{
  "family": "virtual-hendi",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": 256,
  "memory": 512,
  "taskRoleArn": "arn:aws:iam::904336963348:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::904336963348:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "virtual-hendi-app",
      "image": "904336963348.dkr.ecr.us-east-1.amazonaws.com/virtual-hendi-main:latest",

      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "privileged": false,
      "readonlyRootFilesystem": true,
      "interactive": true,
      "healthCheck": {
        "command": ["/health"],
        "interval": 300,
        "timeout": 60,
        "retries": 10,
        "startPeriod": 0
      }
    }
  ]
}
